#!/bin/sh
# Clock module. Sigal 1
clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && var="$(calcurse -d3)" && [ ${#var} -gt 0 ] && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` (only if there are any) and show the month via \`cal\`
#- Middle click opens calcurse if installed" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
#echo `date +"ChefsitoğŸ¹ says: ğŸ“…%Y %b %d (%a) $icon%I:%M%p"`
date +"ğŸ“…%b %d (%a) $icon%I:%M%p"
