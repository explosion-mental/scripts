#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.
# Signal 29
# optional dependencies: dmenumont

location=${1:-/}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) notify-send -t 5000 "ğŸ’½ Disk space" "$(df -h --output=target,used,size)" ;;
	2) dmenumount ;;
	3) notify-send "ğŸ’½ Disk module" "\- Shows used hard drive space.
- Middle click dmenumount
- Left click to show all disk info." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$location" in
	"/home"* ) icon="ğŸ " ;;
	"/mnt"* ) icon="ğŸ’¾" ;;
	*) icon="ğŸ’¾";;
esac

printf "%s%s\n" "ğŸ’¾" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"
